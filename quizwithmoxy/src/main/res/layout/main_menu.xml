<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuActivity"
    android:id="@+id/main_menu">

    <TextView
        android:id="@+id/gameTV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Game"
        app:layout_constraintBottom_toTopOf="@+id/statisticsTV"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statisticsTV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Statistics"
        app:layout_constraintBottom_toTopOf="@+id/settingsTV"
        app:layout_constraintEnd_toEndOf="@+id/gameTV"
        app:layout_constraintStart_toStartOf="@+id/gameTV"
        app:layout_constraintTop_toBottomOf="@+id/gameTV"
        app:layout_constraintVertical_bias="0.506" />

    <TextView
        android:id="@+id/settingsTV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/statisticsTV"
        app:layout_constraintStart_toStartOf="@+id/statisticsTV"
        app:layout_constraintTop_toBottomOf="@+id/statisticsTV" />

</android.support.constraint.ConstraintLayout>